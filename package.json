{
  "name": "nclblast",
  "version": "1.0.0",
  "description": "C++ bindings for all single- and double-precision CLBlast routines.",
  "main": "built/index.js",
  "scripts": {
    "test": "nyc mocha -r ts-node/register ./src/*.spec.ts",
    "lint": "tslint -p . -c tslint.json 'src/*.ts'",
    "docs": "typedoc --out docs --exclude \"**/*+(.spec).ts\" --target es6 src && touch docs/.nojekyll",
    "build": "node-gyp rebuild && tsc",
    "install": "npm run build"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "built/**",
      "docs/**",
      "coverage/**",
      "src/*.spec.ts",
      "src/index.cc"
    ],
    "reporter": [
      "lcov"
    ],
    "all": true
  },
  "homepage": "https://github.com/nperf/nclblast#readme",
  "repository": "github:nperf/nclblast",
  "devDependencies": {
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.11.3",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.3.3333"
  },
  "author": "Mateo Gianolio",
  "license": "MIT",
  "gypfile": true
}
